---
import ScrollContainer from "../ScrollContainer.astro";
interface Props{
  videoids: String[];
  contantainerid: string;

}
const {videoids, contantainerid}=Astro.props;
---
<div class="relative sm:col-span-2 lg:col-span-3 xl:col-span-4">

<ScrollContainer contantainerid={contantainerid} >
  
  {videoids.map((videoid) => (

  <div class="w-full lg:w-4/5 xl:w-3/5  bg-gray-200 ">
          <iframe
           width="600"
           height="400"
            src={`https://www.youtube.com/embed/${videoid}`}
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
  ))}
  

  </ScrollContainer>
</div>
