---
import { Image } from "astro:assets";
import genreList from "./genres";
interface Props {
    id: string;
  title: string;
  date: string;
  description: string;
  rating: string;
  reviews: string;
  type: string;
  language: string;
  genres: string[];
  image: string;
}
const cdn = "https://media.dev.to/cdn-cgi/image/width=400,height=600,fit=cover,gravity=auto,format=auto/"
const { id , title, date, description, rating, reviews, type, language, genres, image } = Astro.props;
const ratingColor = Number(rating) > 7 ? "green" : Number(rating) > 5 ? "yellow" : "red";
const imageUrl = (image === 'https://image.tmdb.org/t/p/original/null' || image === 'https://image.tmdb.org/t/p/original/undefined') ? 'https://via.placeholder.com/300x450?text=Image+Not+Found' : image;

let dateObj = new Date(date);
let options = { year: 'numeric', month: 'long', day: 'numeric' };
let formattedDate = dateObj.toLocaleDateString("en-US", options as Intl.DateTimeFormatOptions);


function getGenreName(id: string) {
  let genre = genreList.find((genre) => genre.id === id);
  return genre?.name;
}
const urltitle = title.replace(/ /g, "-").toLowerCase();
---


 <a href={`/${type}/${id}/${urltitle}`}
      class="flex flex-col lg:flex-row max-w-3xl justify-between bg-gray-800 rounded-xl opacity-90 focus:outline-2 outline-white hover:scale-105 transform transition duration-200 ease-in-out"
    >
      <div class="w-full lg:w-1/3 block grid place-items-center p-3">
        <Image
          src={cdn+imageUrl}
          height={600}
          width={400}
          alt={title}
          class="bg-gray-600 max-h-96 md:w-52 object-cover rounded-xl"
        />
      </div>
      <div class="w-full lg:w-2/3 block flex flex-col lg:justify-center space-y-2 p-3 py-6">
        <h1 class="text-xl lg:text-2xl font-bold text-white">
          {title}
        </h1>
    <h1 class="text-sm  text-gray-200 lg:text-base">{formattedDate}</h1>
        <p class="my-3 text-sm text-gray-400">
        {description && description.length > 0 ? (description.length > 150 ? description.substring(0, 150) + "..." : description) : "Description not found"}
        </p>

        <div class="flex justify-between py-3 ">
          <span class="flex items-center space-x-2">
            <span
              class={`rounded-lg bg-${ratingColor}-500 px-3 py-1.5 text-sm font-semibold uppercase tracking-wider text-white flex space-x-2 items-center`}
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                fill="currentColor"
                viewBox="0 0 256 256"
                ><path
                  d="M234.5,114.38l-45.1,39.36,13.51,58.6a16,16,0,0,1-23.84,17.34l-51.11-31-51,31a16,16,0,0,1-23.84-17.34L66.61,153.8,21.5,114.38a16,16,0,0,1,9.11-28.06l59.46-5.15,23.21-55.36a15.95,15.95,0,0,1,29.44,0h0L166,81.17l59.44,5.15a16,16,0,0,1,9.11,28.06Z"
                ></path></svg
              >
              <span>{Number(rating).toFixed(1)}/10</span>
            </span>
            <span class="hidden lg:flex">({reviews} reviews)</span>
          </span>
          <div>
               <span
            class="text-sm uppercase mx-2 px-2 py-1 bg-blue-200 text-blue-600 rounded-md"
            >{type}</span
          >
          <span
            class="text-sm uppercase mx-2 px-2 py-1 bg-gray-200 text-gray-600 rounded-md"
            >{language}</span>
          </div>
        </div>
<div class="flex flex-wrap gap-2 py-2">
      <!-- <span
            class="text-[10px] lg:text-xs uppercase  px-2 py-1 bg-gray-200 text-gray-600 rounded-md"
            >🏃‍♂️ ACTION</span>
            <span
            class="text-[10px] lg:text-xs uppercase  px-2 py-1 bg-gray-200 text-gray-600 rounded-md"
            >🎒 ADVENTURE</span>
          <span
            class="text-[10px] lg:text-xs uppercase  px-2 py-1 bg-gray-200 text-gray-600 rounded-md"
            >🦄 FANTASY</span>
          <span
            class="text-[10px] lg:text-xs uppercase  px-2 py-1 bg-gray-200 text-gray-600 rounded-md"
            >📺 TV MOVIE</span> -->
            {Array.isArray(genres) && genres.length > 0 && genres.map((genre) => (
                <span class="text-[10px] lg:text-xs uppercase  px-2 py-1 bg-gray-200 text-gray-600 rounded-md">{getGenreName(genre)}</span>
            ))}
       
      </div>
    </a>
